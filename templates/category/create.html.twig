{% extends 'base.html.twig' %}

{% block title %}Créer une catégorie{% endblock %}

{% block body %}

    <h1>Créer une catégorie</h1>

    {{ form_start(formView) }}
    {{ form_errors(formView) }}

    <div class="row">
        <div class="col-4">
            {{ form_row(formView.name) }}
            <button type="submit" class="btn btn-primary"><i class="fas fa-save fa-lg"></i>
                Enregistrer
            </button>
        </div>
    </div>

    {{ form_end(formView) }}

{% endblock %}